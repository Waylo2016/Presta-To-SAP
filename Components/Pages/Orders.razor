@page "/orders"
@using Microsoft.EntityFrameworkCore
@using PrestaToSap.services
@using PrestaToSap.model.Context
@inject PrestaOrderIngestionService IngestionService
@inject AppDbContext Db
@inject ILogger<Orders> Logger

@attribute [StreamRendering]

<PageTitle>Orders</PageTitle>

<h1>Orders</h1>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (ordersList == null || !ordersList.Any())
{
    <p>No orders found.</p>
}
else
{
    <div class="orders-scroll">
        <table class="table">
            <thead>
                <tr>
                    <th>Ordernummer</th>
                    <th>Klantnummer</th>
                    <th>Factuurnummer</th>
                    <th>Aantal producten</th>
                    <th>Webshop</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in ordersList)
                {
                    <tr>
                        <td>@o.OrderNumber</td>
                        <td>@o.CustomerNumber</td>
                        <td>@o.InvoiceNumber</td>
                        <td>@o.ProductCount</td>
                        <td>@o.Webshop</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private record OrderDisplay(
        int OrderNumber,
        int CustomerNumber,
        string? InvoiceNumber,
        int ProductCount,
        string Webshop
    );

    private List<OrderDisplay>? ordersList;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            // sync data with presta shop API's, still have to make it so this only runs once an hour as a service, instead of on the front end page load
            // await IngestionService.SyncLastHourOrdersAsync();

            // 2) Load data from the database only
            ordersList = await Db.Orders
                .Select(o => new OrderDisplay(
                    o.PrestaOrderId,
                    o.IdCustomer,
                    o.InvoiceNumber,
                    o.OrderRows.Count,
                    o.Webshop
                ))
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading orders for Orders page");
            ordersList = new List<OrderDisplay>();
        }
        finally
        {
            isLoading = false;
        }
    }
}